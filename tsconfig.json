{
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "Node",
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "declaration": true,
      "declarationMap": false,
      "pretty": true,
      "removeComments": true,
      "noImplicitOverride": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
    },
    "lib": [
      "esnext",
      "es5",
      "es6"
    ],
    "include": [
      "src/*",
      "src/**/*",
      "src/**/**/*",
      "src/index.ts",
      "src/config.ts",
      "src/api"
    ],
    "exclude": [
      "node_modules",
      "node_modules/*",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts",
      "*.tgz",
      "test-*",
      "_*.ts",
    ]
  }